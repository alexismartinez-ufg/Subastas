@model Subastas.Domain.Producto
@{
    ViewData["Title"] = "Delete";
}

<div class="create">
    <div class="justify-content-left btn-return">
        <img src="/assets/img/icons/returnIcon.png" alt="Regresar" height="40px">
        <a asp-action="Index">Regresar</a>
    </div>
    <br />

    <h1>Eliminar Producto</h1>
    <h3>¿Seguro que quiere eliminar este producto?</h3>
    <br />
    <div>
        <dl class="dl-horizontal">
            <dt>Nombre</dt>
            <dd>@Model.NombreProducto</dd>

            <dt>Descripción</dt>
            <dd>@Model.DescripcionProducto</dd>

            <!-- Verificación y muestra de la imagen del producto -->
            @if (!string.IsNullOrEmpty(Model.ImagenProducto))
            {
                <dt>Imagen</dt>
                <dd><img src="@Model.ImagenProducto" alt="Imagen del Producto" style="max-width: 100%; max-height: 300px;"></dd>
            }
            else
            {
                <dt>Imagen</dt>
                <dd>No disponible</dd>
            }
        </dl>
    
        <form asp-action="DeleteConfirmed" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" name="id" value="@Model.IdProducto" />
            <input type="submit" value="Eliminar" class="btn btn-danger" />
        </form>
    </div>
</div>