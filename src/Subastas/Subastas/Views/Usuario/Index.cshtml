@model IEnumerable<Subastas.Domain.Usuario>

@{
    ViewData["Title"] = "Listado de Usuarios";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>Usuarios</h2>
        <a class="btn btn-primary" asp-action="Create">Create New</a>
    </div>
    <div class="table-responsive">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.IdUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.NombreUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.ApellidoUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.CorreoUsuario)</th>
                    <th>@Html.DisplayNameFor(model => model.Password)</th>
                    <th>@Html.DisplayNameFor(model => model.EstaActivo)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.IdUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.NombreUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.ApellidoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.CorreoUsuario)</td>
                        <td>@Html.DisplayFor(modelItem => item.Password)</td>
                        <td>@Html.DisplayFor(modelItem => item.EstaActivo)</td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.IdUsuario">Edit</a>
                            <a class="btn btn-sm btn-secondary" asp-action="Details" asp-route-id="@item.IdUsuario">Details</a>
                            <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@item.IdUsuario">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>