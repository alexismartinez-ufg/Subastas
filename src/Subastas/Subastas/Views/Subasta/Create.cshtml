@model Subastas.Domain.Subasta

@{
    ViewData["Title"] = Model.IdSubasta == 0 ? "Crear Subasta" : "Editar Subasta";
    var formAction = Model.IdSubasta == 0 ? "Create" : "Edit";
}

<div class="create">
    <div class="justify-content-left btn-return">
        <img src="/assets/img/icons/returnIcon.png" alt="Regresar" height="40px">
        <a asp-action="Index">Regresar</a>
    </div>
    <br />
    <h1>@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-6">
            <form asp-action="@formAction">
                <input asp-for="IdSubasta" type="hidden" />
                <div class="form-group">
                    <label asp-for="TituloSubasta" class="control-label"></label>
                    <input asp-for="TituloSubasta" class="form-control" />
                    <span asp-validation-for="TituloSubasta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MontoInicial" class="control-label"></label>
                    <input asp-for="MontoInicial" class="form-control" type="number" step="0.01" />
                    <span asp-validation-for="MontoInicial" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaSubasta" class="control-label"></label>
                    <input asp-for="FechaSubasta" class="form-control" type="datetime-local" min="@DateTime.Today.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="FechaSubasta" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FechaSubastaFin" class="control-label"></label>
                    <input asp-for="FechaSubastaFin" class="form-control" type="datetime-local" min="@DateTime.Today.ToString("yyyy-MM-ddTHH:mm")" />
                    <span asp-validation-for="FechaSubastaFin" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdProducto" class="control-label"></label>
                    <select asp-for="IdProducto" class="form-control" asp-items="@(ViewBag.IdProducto)">
                        <option value="" selected disabled>Selecciona un producto</option>
                    </select>
                    <span asp-validation-for="IdProducto" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="EstaActivo" class="form-check-input" />
                        <label asp-for="EstaActivo" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="EstaActivo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="form-check">
                        <input asp-for="Finalizada" class="form-check-input" />
                        <label asp-for="Finalizada" class="form-check-label"></label>
                    </div>
                    <span asp-validation-for="Finalizada" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="@ViewData["Title"]" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
