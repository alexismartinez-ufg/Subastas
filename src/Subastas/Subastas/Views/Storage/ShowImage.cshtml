@{
    ViewBag.Title = "Show Image";
}

<h2>View Image</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div style="color: red;">
        @ViewBag.ErrorMessage
    </div>
}

<form asp-action="ShowImage" method="post">
    <label for="keyName">Enter Image Key Name:</label>
    <input type="text" id="keyName" name="keyName" required />
    <button type="submit">View Image</button>
</form>

@if (ViewBag.ImageData != null && ViewBag.ContentType != null)
{
    <h3>Image Key: @ViewBag.KeyName</h3>
    <img src="data:@ViewBag.ContentType;base64,@ViewBag.ImageData" alt="Retrieved Image" />
}
